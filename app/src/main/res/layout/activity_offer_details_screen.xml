<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/mainLin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.home.fragment.offer.offerDetails.OfferDetailsScreen">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@mipmap/back_btn_ic"
                    android:contentDescription="@string/backBtn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/offerDetails"
                        android:textColor="@android:color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/newsImg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@android:color/holo_green_dark" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@android:color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_6sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/offerTitle"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/newsTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=" بعد اعتراضات كبيرة.. الحكومة الفرنسية تسعى إلى تعديل مقترح قانون الأمن الشامل "
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@android:color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_6sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/offerDetails"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/offerDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text=" بعد اعتراضات كبيرة.. الحكومة الفرنسية تسعى إلى تعديل مقترح قانون الأمن الشامل "
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="start"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/offerPrice"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/cairo_semibold"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:text="@string/priceBefor"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/priceBefore"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:autofillHints="@string/price"
                                            android:backgroundTint="@color/grayBg"
                                            android:drawableStart="@drawable/price_ic"
                                            android:drawablePadding="@dimen/_5sdp"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:inputType="numberSigned"
                                            android:text="0"
                                            android:textColor="@color/etTextColor"
                                            android:textSize="@dimen/_10sdp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:text="@string/le"
                                            android:textColor="@android:color/darker_gray"
                                            android:textSize="@dimen/_10sdp" />


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/cairo_semibold"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:text="@string/percentageValue"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/percentageValue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:autofillHints="@string/price"
                                            android:backgroundTint="@color/grayBg"
                                            android:drawablePadding="@dimen/_5sdp"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:inputType="numberSigned"
                                            android:text="0"
                                            android:textColor="@color/etTextColor"
                                            android:textSize="@dimen/_10sdp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:text="@string/percentage"
                                            android:textColor="@android:color/darker_gray"
                                            android:textSize="@dimen/_10sdp" />


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/cairo_semibold"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:text="@string/priceAfter"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/priceAfter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:autofillHints="@string/price"
                                            android:backgroundTint="@color/grayBg"
                                            android:drawableStart="@drawable/price_ic"
                                            android:drawablePadding="@dimen/_5sdp"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:inputType="numberSigned"
                                            android:text="0"
                                            android:textColor="@color/etTextColor"
                                            android:textSize="@dimen/_10sdp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:text="@string/le"
                                            android:textColor="@android:color/darker_gray"
                                            android:textSize="@dimen/_10sdp" />


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:gravity="start"
                                    android:padding="@dimen/_2sdp"
                                    android:text="@string/numOfClients"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/numOfClients"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:gravity="start"
                                    android:padding="@dimen/_2sdp"
                                    android:text=" 20 "
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:gravity="start"
                                    android:padding="@dimen/_2sdp"
                                    android:text="@string/offerTime"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView

                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:text="- 03:00:45"
                                    android:textColor="@color/mainColor"
                                    android:textSize="@dimen/_14sdp" />


                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <Button
                    android:id="@+id/deleteOfferBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/curves_red_bg"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/deleteOffer"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</layout>