<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/mainLin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.start.signUp.SignUpScreen">

        <FrameLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/_10sdp"
                android:background="@mipmap/back_btn_ic"
                android:contentDescription="@string/backBtn" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/signUp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />


        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/joinUsImg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/subscribe"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/subscribe_purpose1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/_10sdp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/subscribe_purpose2"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/name_purpose"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/id"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/user_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/firstName"
                    android:inputType="text"
                    android:maxEms="30"
                    android:maxLength="30"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />


                <EditText
                    android:id="@+id/middleName"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/id"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/user_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/middleName"
                    android:inputType="text"
                    android:maxEms="30"
                    android:maxLength="30"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/id"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/user_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/lastName"
                    android:inputType="text"
                    android:maxEms="30"
                    android:maxLength="30"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/email_purpose"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/email"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/email_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/phone"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/phone_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxEms="11"
                    android:maxLength="11"
                    android:padding="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints="@string/id"
                    android:background="@drawable/curves_gray_bg"
                    android:drawableStart="@drawable/id_ic"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="@string/yourId"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/etTextColor"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cardImg"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_gravity="start"
                        android:background="@android:color/darker_gray"
                        android:padding="@dimen/_40sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_img_gray_ic" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/card_purpose"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/_10sdp" />

                    <Button

                        android:id="@+id/addCardBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/curves_yellow_bg"
                        android:contentDescription="@string/signUp"
                        android:fontFamily="@font/cairo_semibold"
                        android:padding="@dimen/_7sdp"                        android:text="@string/uploadCard"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:gravity="center"
                    android:id="@+id/error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="Error"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/signUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/curves_yellow_bg"
                    android:contentDescription="@string/signUp"
                    android:fontFamily="@font/cairo_semibold"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/signUp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>