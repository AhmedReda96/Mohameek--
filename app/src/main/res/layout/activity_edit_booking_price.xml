<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/mainLin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.home.fragment.setting.accountSetting.editBookingPrice.EditBookingPrice">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@mipmap/back_btn_ic"
                    android:contentDescription="@string/backBtn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"

                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/editBookingPrice"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/bookingPrice_purpose1"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/curves_gray_bg"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">


                            <EditText
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autofillHints="@string/price"
                                android:backgroundTint="@color/grayBg"
                                android:drawableStart="@drawable/price_ic"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:hint="@string/price"
                                android:inputType="numberSigned"
                                android:padding="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/etTextColor"
                                android:textSize="@dimen/_14sdp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/le"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_14sdp" />


                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/saturdayCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_6sdp">


                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical"
                                android:padding="@dimen/_3sdp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:fontFamily="@font/cairo_semibold"
                                        android:text="@string/bookingVoiceCall"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />


                                    <com.suke.widget.SwitchButton
                                        android:id="@+id/voiceCallSwitch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:checked="false" />


                                </RelativeLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:text="@string/bookingVoiceCall_purpose1"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_10sdp" />


                                <LinearLayout
                                    android:id="@+id/voiceCallLin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">


                                    <EditText
                                        android:id="@+id/visaNum"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:autofillHints="@string/price"
                                        android:background="@drawable/curves_gray_bg"
                                        android:backgroundTint="@color/grayBg"
                                        android:drawableStart="@drawable/card_ic"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:fontFamily="@font/cairo_semibold"
                                        android:hint="@string/cardNum"
                                        android:inputType="numberSigned"
                                        android:maxEms="16"
                                        android:maxLength="16"
                                        android:padding="@dimen/_10sdp"
                                        android:text=""
                                        android:textColor="@color/etTextColor"
                                        android:textSize="@dimen/_14sdp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@drawable/curves_gray_bg"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:paddingEnd="@dimen/_5sdp">


                                        <EditText
                                            android:id="@+id/priceOfPhoneService"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:autofillHints="@string/price"
                                            android:backgroundTint="@color/grayBg"
                                            android:drawableStart="@drawable/price_ic"
                                            android:drawablePadding="@dimen/_5sdp"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:hint="@string/price"
                                            android:inputType="numberSigned"
                                            android:padding="@dimen/_10sdp"
                                            android:text=""
                                            android:textColor="@color/etTextColor"
                                            android:textSize="@dimen/_14sdp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/cairo_semibold"
                                            android:text="@string/le"
                                            android:textColor="@android:color/darker_gray"
                                            android:textSize="@dimen/_14sdp" />


                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:text="Error"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/saveBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/curves_yellow_bg"
                            android:contentDescription="@string/next"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</layout>