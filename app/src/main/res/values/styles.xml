<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#673AB7</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

</resources>
