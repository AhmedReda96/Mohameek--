<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#673AB7</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="RateBar" parent="@style/Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/mainColor</item>
    </style>

    <style name="tabBar" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/cairo_semibold</item>
    </style>

    <style name="MyAppBarLayoutTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="monthCalendarText" parent="AppTheme">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="dayCalendarText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
    </style>

    <style name="weekCalendarText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
    </style>



    <style name="CalenderViewCustom" parent="Theme.AppCompat">
            <item name="colorAccent">@android:color/holo_blue_dark</item>
            <item name="colorPrimary">@android:color/darker_gray</item>
            <item name="android:textSize">@dimen/_18sdp</item>
            <item name="android:textColorPrimary">@color/colorPrimary</item>
        </style>

        <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
            <item name="android:textColor">@android:color/holo_orange_dark</item>
        </style>

        <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
            <item name="android:textColor">@android:color/holo_green_dark</item>
        </style>


</resources>
